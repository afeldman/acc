&ACCESS RVP
DEF test_simple()
  ; Simple KRL test program
  
  ; Variable declarations
  DECL INT counter
  DECL REAL velocity
  DECL BOOL running
  
  ; Initialize variables
  counter = 0
  velocity = 100.0
  running = TRUE
  
  ; Simple loop
  FOR counter = 1 TO 10 STEP 1
    WAIT SEC 0.5
  ENDFOR
  
  ; Set output
  $OUT[1] = TRUE
  
END
